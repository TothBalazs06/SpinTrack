<Page x:Class="SpinTrack.Views.CreditsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Credits">
    <Grid Background="LightGray" Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Credits and Help" FontSize="24" FontWeight="Bold" Foreground="#37474F" Margin="0,0,0,20" />

            <!-- Creator Attribution -->
            <TextBlock Text="SpinTrack created by TothBalazs06"
                       FontSize="16" Foreground="#555" Margin="0,0,0,10" TextWrapping="Wrap" />

            <!-- GitHub Repository -->
            <TextBlock FontSize="16" FontWeight="Bold" Foreground="#37474F" Margin="0,10,0,0" Text="GitHub Repository:" />
            <TextBlock FontSize="16" Foreground="Blue" Margin="0,0,0,10" TextWrapping="Wrap">
                <Hyperlink NavigateUri="https://github.com/TothBalazs06/SpinTrack" RequestNavigate="Hyperlink_RequestNavigate">
                    https://github.com/TothBalazs06/SpinTrack
                </Hyperlink>
            </TextBlock>

            <!-- Icon Attribution -->
            <TextBlock FontSize="16" FontWeight="Bold" Foreground="#37474F" Margin="0,10,0,0" Text="Icons provided by:" />
            <TextBlock FontSize="16" Foreground="Blue" Margin="0,0,0,10" TextWrapping="Wrap">
                <Hyperlink NavigateUri="https://www.freepik.com/" RequestNavigate="Hyperlink_RequestNavigate">
                    https://www.freepik.com/
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
