<Page x:Class="SpinTrack.Views.AddRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add Record">
    <Grid Background="LightGray" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Text="Add a New Record"
                   Grid.Row="0" Grid.ColumnSpan="2"
                   FontSize="24" FontWeight="Bold"
                   Foreground="#37474F" Margin="0,0,0,20" />

        <!-- Artist (with Autocomplete) -->
        <TextBlock Text="Artist:"
                   Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Foreground="#555" />
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="ArtistTextBox"
         ToolTip="Start typing to see suggestions"
         TextChanged="ArtistTextBox_TextChanged" />
        <Popup x:Name="SuggestionsPopup" PlacementTarget="{Binding ElementName=ArtistTextBox}" IsOpen="False" StaysOpen="False">
            <Border Background="White" BorderBrush="#555" BorderThickness="1">
                <ListBox x:Name="SuggestionsListBox" SelectionChanged="SuggestionsListBox_SelectionChanged" />
            </Border>
        </Popup>



        <!-- Album Title -->
        <TextBlock Text="Album Title:"
                   Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" Foreground="#555" />
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="AlbumTitleTextBox" 
                 ToolTip="Enter the album title" />

        <!-- Release Year -->
        <TextBlock Text="Release Year:"
                   Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center" Foreground="#555" />
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="ReleaseYearTextBox" 
                 ToolTip="Enter the year of release" />

        <!-- Category -->
        <TextBlock Text="Category:"
                   Grid.Row="4" Grid.Column="0"
                   VerticalAlignment="Center" Foreground="#555" />
        <ComboBox Grid.Row="4" Grid.Column="1" x:Name="CategoryComboBox" 
                  ToolTip="Select a genre">
            <ComboBoxItem Content="Rock" />
            <ComboBoxItem Content="Pop" />
            <ComboBoxItem Content="Jazz" />
        </ComboBox>

        <!-- Length -->
        <TextBlock Text="Length:"
                   Grid.Row="5" Grid.Column="0"
                   VerticalAlignment="Center" Foreground="#555" />
        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1" x:Name="LengthStackPanel">
            <RadioButton Content="LP" GroupName="LengthGroup" />
            <RadioButton Content="EP" GroupName="LengthGroup" Margin="10,0,0,0" />
            <RadioButton Content="SP" GroupName="LengthGroup" Margin="10,0,0,0" />
        </StackPanel>

        <!-- Quantity -->
        <TextBlock Text="Quantity:"
                   Grid.Row="6" Grid.Column="0"
                   VerticalAlignment="Center" Foreground="#555" />
        <TextBox Grid.Row="6" Grid.Column="1" x:Name="QuantityTextBox" 
                 ToolTip="Enter the quantity" Text="1" />

        <!-- Vinyl Quality -->
        <TextBlock Text="Vinyl Quality:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Foreground="#555" />
        <ComboBox Grid.Row="8" Grid.Column="1" x:Name="VinylQualityComboBox" ToolTip="Select the vinyl quality">
            <ComboBoxItem Content="NM+" />
            <ComboBoxItem Content="NM" />
            <ComboBoxItem Content="VG+" />
            <ComboBoxItem Content="VG" />
            <ComboBoxItem Content="VG-" />
            <ComboBoxItem Content="G+" />
            <ComboBoxItem Content="G" />
            <ComboBoxItem Content="F" />
        </ComboBox>

        <!-- Sleeve Quality -->
        <TextBlock Text="Sleeve Quality:" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" Foreground="#555" />
        <ComboBox Grid.Row="9" Grid.Column="1" x:Name="SleeveQualityComboBox" ToolTip="Select the sleeve quality">
            <ComboBoxItem Content="NM+" />
            <ComboBoxItem Content="NM" />
            <ComboBoxItem Content="VG+" />
            <ComboBoxItem Content="VG" />
            <ComboBoxItem Content="VG-" />
            <ComboBoxItem Content="G+" />
            <ComboBoxItem Content="G" />
            <ComboBoxItem Content="F" />
        </ComboBox>

        <!-- Covers -->
        <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,0">
            <CheckBox Content="Outer Cover" x:Name="OuterCoverCheckBox" Margin="10,0,10,0" />
            <CheckBox Content="Inner Cover" x:Name="InnerCoverCheckBox" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,10">
            <Button Content="Save" Width="100" Background="#4CAF50" Foreground="White" Margin="0,0,10,0" Click="SaveRecord" />
            <Button Content="Cancel" Width="100" Background="#E74C3C" Foreground="White" />
        </StackPanel>
    </Grid>
</Page>
